{
  "slackApp": {
    "name": "Clack",
    "description": "Ask questions about your codebase using reactions",
    "backgroundColor": "#4A154B"
  },
  "reactions": {
    "trigger": "robot_face",
    "thinking": {
      "type": "message"
    }
  },
  "directMessages": {
    "enabled": false,
    "thinking": {
      "type": "message"
    }
  },
  "mentions": {
    "enabled": false,
    "thinking": {
      "type": "message"
    }
  },
  "repositories": [
    {
      "name": "my-app",
      "url": "git@github.com:your-org/your-repo.git",
      "description": "Main application codebase - contains backend API and frontend",
      "branch": "main"
    }
  ],
  "git": {
    "sshKeyPath": "data/auth/ssh/id_rsa",
    "pullIntervalMinutes": 60,
    "shallowClone": true,
    "cloneDepth": 1
  },
  "sessions": {
    "timeoutMinutes": 15,
    "cleanupIntervalMinutes": 5
  },
  "claudeCode": {
    "model": "sonnet"
  },
  "slack": {
    "fetchAndStoreUsername": false,
    "notifyHiddenThread": true
  }
}
