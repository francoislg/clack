{
  "slackApp": {
    "name": "Clack",
    "description": "Ask questions about your codebase using reactions",
    "backgroundColor": "#4A154B"
  },
  "reactions": {
    "trigger": "robot_face",
    "thinking": {
      "type": "message"
    },
    "changesWorkflow": {
      "enabled": false,
      "trigger": "clack-work"
    }
  },
  "directMessages": {
    "enabled": false,
    "thinking": {
      "type": "message"
    },
    "changesWorkflow": {
      "enabled": false
    }
  },
  "mentions": {
    "enabled": false,
    "thinking": {
      "type": "message"
    },
    "changesWorkflow": {
      "enabled": false
    }
  },
  "repositories": [
    {
      "name": "my-app",
      "url": "your-org/your-repo",
      "description": "Main application codebase - contains backend API and frontend",
      "branch": "main",
      "supportsChanges": false,
      "pullRequestInstructions": ".claude/skills/create-pr.md",
      "mergeStrategy": "squash"
    }
  ],
  "git": {
    "pullIntervalMinutes": 60,
    "shallowClone": true,
    "cloneDepth": 1
  },
  "sessions": {
    "timeoutMinutes": 1440,
    "cleanupIntervalMinutes": 5
  },
  "claudeCode": {
    "model": "sonnet"
  },
  "slack": {
    "fetchAndStoreUsername": false,
    "notifyHiddenThread": true
  },
  "changesWorkflow": {
    "enabled": false,
    "prInstructions": "Always include test coverage if applicable.",
    "timeoutMinutes": 10,
    "maxConcurrent": 3,
    "sessionExpiryHours": 24,
    "monitoringIntervalMinutes": 15
  }
}
