{
  "name": "clack",
  "version": "1.0.0",
  "description": "Clack - Slack bot that answers codebase questions using Claude Code",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch & node --watch dist/index.js",
    "dev:logfile": "mkdir -p logs && node dist/index.js 2>&1 | tee \"logs/clack-$(date +%Y%m%d-%H%M%S).log\"",
    "test": "node --test",
    "manifest": "npx tsx scripts/generate-manifest.ts",
    "docker-setup": "bash scripts/docker-setup.sh",
    "deploy:gce": "bash scripts/gce-deploy.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.7",
    "@slack/bolt": "^4.1.0",
    "@slack/web-api": "^7.7.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
